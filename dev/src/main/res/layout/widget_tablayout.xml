<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        android:id="@+id/sp_center"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:background="#979797"/>

    <TextView
        android:id="@+id/tvItem1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/sp_center"
        android:layout_toStartOf="@+id/sp_center"
        android:gravity="center"
        android:textColor="@color/app_main_color"
        android:textSize="@dimen/text_16dp"
        tools:text="运输中"/>

    <TextView
        android:id="@+id/tvItem2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/sp_center"
        android:layout_toRightOf="@+id/sp_center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16dp"
        tools:text="已完成"/>

    <View
        android:id="@+id/v_indicator"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:background="@color/app_main_color"/>


</RelativeLayout>

